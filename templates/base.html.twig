<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}EMSR - Gestion des Mouvements RH{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    {% block stylesheets %}
        <style>
            .navbar-brand {
                font-weight: bold;
            }
            .table-responsive {
                border-radius: 0.375rem;
            }
            .badge-type {
                font-size: 0.75em;
            }
            .mouvement-highlight {
                background-color: #d4edda !important;
                animation: highlight 2s ease-in-out;
            }
            @keyframes highlight {
                0% { background-color: #28a745; }
                100% { background-color: #d4edda; }
            }
            .prise-en-compte-checkbox {
                transform: scale(1.2);
            }
            .sidebar {
                min-height: calc(100vh - 56px);
                background-color: #f8f9fa;
            }
            .main-content {
                padding: 2rem;
            }
            .stats-card {
                transition: transform 0.2s;
            }
            .stats-card:hover {
                transform: translateY(-2px);
            }
            .table th {
                background-color: #f8f9fa;
                border-top: none;
            }
            .btn-sm {
                padding: 0.25rem 0.5rem;
                font-size: 0.875rem;
            }
        </style>
    {% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_dashboard') }}">
                <i class="fas fa-users-cog me-2"></i>
                EMSR
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_dashboard' ? 'active' : '' }}" 
                               href="{{ path('app_dashboard') }}">
                                <i class="fas fa-tachometer-alt me-1"></i>
                                Tableau de bord
                            </a>
                        </li>
                    {% endif %}
                    
                    {% if is_granted('ROLE_RH') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_mouvement' ? 'active' : '' }}" 
                               href="{{ path('app_mouvement_index') }}">
                                <i class="fas fa-list me-1"></i>
                                Mouvements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_mouvement_new') }}">
                                <i class="fas fa-plus me-1"></i>
                                Nouveau mouvement
                            </a>
                        </li>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {{ app.request.get('_route') starts with 'app_admin' ? 'active' : '' }}" 
                               href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog me-1"></i>
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('app_admin_index') }}">
                                    <i class="fas fa-chart-line me-2"></i>Vue d'ensemble
                                </a></li>
                                <li><a class="dropdown-item" href="{{ path('app_admin_users') }}">
                                    <i class="fas fa-users me-2"></i>Utilisateurs
                                </a></li>
                                <li><a class="dropdown-item" href="{{ path('app_admin_config') }}">
                                    <i class="fas fa-cogs me-2"></i>Configuration
                                </a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
                
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i>
                                {{ app.user.displayName }}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <span class="badge bg-danger ms-1">ADMIN</span>
                                {% elseif is_granted('ROLE_RH') %}
                                    <span class="badge bg-warning ms-1">RH</span>
                                {% elseif is_granted('ROLE_INFO') %}
                                    <span class="badge bg-info ms-1">INFO</span>
                                {% endif %}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">{{ app.user.displayName }}</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                </a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Messages Flash -->
    {% for type, messages in app.flashes %}
        <div class="container-fluid mt-3">
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    {% if type == 'success' %}
                        <i class="fas fa-check-circle me-2"></i>
                    {% elseif type == 'error' or type == 'danger' %}
                        <i class="fas fa-exclamation-triangle me-2"></i>
                    {% elseif type == 'warning' %}
                        <i class="fas fa-exclamation-circle me-2"></i>
                    {% else %}
                        <i class="fas fa-info-circle me-2"></i>
                    {% endif %}
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    <!-- Contenu principal -->
    <main>
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="fas fa-copyright me-1"></i>
                        {{ 'now'|date('Y') }} EMSR - Gestion des Mouvements RH
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-muted mb-0">
                        <i class="fas fa-code me-1"></i>
                        Powered by Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    {% block javascripts %}
        <script>
            // Auto-hide des messages flash après 5 secondes
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
                
                // Confirmation de suppression
                const deleteButtons = document.querySelectorAll('[data-confirm-delete]');
                deleteButtons.forEach(function(button) {
                    button.addEventListener('click', function(e) {
                        if (!confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')) {
                            e.preventDefault();
                        }
                    });
                });
            });
        </script>
    {% endblock %}
</body>
</html>